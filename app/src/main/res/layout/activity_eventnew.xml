<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <AutoCompleteTextView
        android:layout_width="195dp"
        android:layout_height="0dp"
        android:id="@+id/eventspinner"
        android:hint="Select Event"
        android:background="@drawable/spinnerbg"
        app:layout_constraintRight_toLeftOf="@+id/textView6"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/btnsave"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/btnsave"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        android:layout_marginStart="8dp" />

    <Button
        android:text="Clear"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:id="@+id/btnclear"
        android:background="@drawable/btnbackground"
        android:layout_marginStart="17dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnsave"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textView3"
        android:layout_marginLeft="17dp" />

    <Button
        android:text="Save"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:id="@+id/btnsave"
        android:background="@drawable/btnbackground"
        app:layout_constraintRight_toLeftOf="@+id/btnclear"
        android:layout_marginRight="8dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="NOTE"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/editNote"
        android:layout_marginStart="5dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="9dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="31dp"
        android:ems="10"
        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789  "
        android:background="@drawable/edittext"
        android:id="@+id/editNote"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@+id/btnclear"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="32dp" />

    <TextView
        android:text="RACK NO."
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="141dp"
        android:digits="0123456789"
        android:id="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="5dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/edittext"
        android:id="@+id/editRackno"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/editWeight"
        app:layout_constraintRight_toRightOf="@+id/textView6"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/editWeight"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp" />

    <TextView
        android:text="WEIGHT"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/editWeight"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="7dp"
        app:layout_constraintLeft_toLeftOf="@+id/editWeight" />
    <EditText
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:inputType="number|numberDecimal"
        android:background="@drawable/edittext"
        android:id="@+id/editWeight"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/editNote"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="35dp"
        app:layout_constraintLeft_toRightOf="@+id/editRackno"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="16dp" />

    <TextView
        android:text="Total:"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:id="@+id/textView4"
        android:layout_marginStart="5dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textcount1"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="-6dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/textcount1"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#eb7a02"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="7dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/editRackno"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/textView4"
        android:layout_marginLeft="7dp" />

    <TextView
        android:text="Valid:"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:id="@+id/textView5"
        android:layout_marginStart="59dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textcount2"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textcount1"
        android:layout_marginLeft="57dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/textcount2"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#eb7a02"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="5dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/editRackno"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/textView5"
        android:layout_marginLeft="5dp" />

    <TextView
        android:text="Invalid:"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:id="@+id/textView6"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="118dp"
        android:layout_marginEnd="116dp"
        app:layout_constraintRight_toRightOf="@+id/horizontalScrollView3"
        app:layout_constraintBaseline_toBaselineOf="@+id/textcount3"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textView5"
        android:layout_marginLeft="118dp"
        android:layout_marginRight="116dp"
        app:layout_constraintHorizontal_bias="1.0" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/textcount3"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#eb7a02"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/horizontalScrollView3"
        android:layout_marginEnd="14dp"
        app:layout_constraintRight_toRightOf="@+id/textView6"
        android:layout_marginTop="82dp"
        app:layout_constraintTop_toBottomOf="@+id/editNote"
        android:layout_marginBottom="81dp"
        android:layout_marginRight="14dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:visibility="invisible"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/horizontalScrollView3"
        android:layout_marginEnd="7dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="47dp"
        android:layout_marginBottom="49dp"
        app:layout_constraintTop_toTopOf="@+id/editWeight"
        android:layout_marginRight="7dp"
        app:layout_constraintVertical_bias="0.0" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/horizontalScrollView3"
        android:layout_gravity="left|top"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="270dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left|top">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Delete Invalid"
                    android:padding="5dp"
                    android:textColor="#8A0808"
                    android:layout_marginLeft="0dp"
                    android:layout_gravity="left|top"
                    android:id="@+id/clrawbbtn" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AWB No."
                    android:padding="5dp"
                    android:textColor="#8A0808"
                    android:layout_marginLeft="40dp"
                    android:layout_gravity="left"
                    android:id="@+id/textView7" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weight"
                    android:padding="5dp"
                    android:textColor="#8A0808"
                    android:layout_gravity="left"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/textView8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CheckRemark"
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="left"
                    android:textColor="#8A0808"
                    android:id="@+id/textView9" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Events"
                    android:padding="5dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="20dp"
                    android:textColor="#8A0808"
                    android:id="@+id/textView10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EventCode"
                    android:padding="5dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="45dp"
                    android:textColor="#8A0808"
                    android:id="@+id/textView11" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Note"
                    android:padding="5dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:textColor="#8A0808"
                    android:id="@+id/textView12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RackNo."
                    android:padding="5dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="70dp"
                    android:textColor="#8A0808"
                    android:id="@+id/textView13" />
            </TableRow>

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scrollView1"
                >

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/resulttable1"/>

            </ScrollView>
        </TableLayout>

    </HorizontalScrollView>
    <ProgressBar
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/progressBarMain"
        android:layout_gravity="center_horizontal"
        style="?android:attr/progressBarStyle"
        android:progressBackgroundTint="@color/colorPrimaryDark"
        android:visibility="invisible"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>